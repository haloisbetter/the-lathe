modules = ["python-3.11", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libyaml", "patch"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lathe CLI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lathe Agent Server"

[[workflows.workflow]]
name = "Lathe CLI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m lathe.main"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Lathe Agent Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m lathe.server"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
