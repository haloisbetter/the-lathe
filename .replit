modules = ["python-3.11", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libyaml", "patch"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lathe CLI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lathe App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lathe TUI"

[[workflows.workflow]]
name = "Lathe CLI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m lathe.main"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Lathe App Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m lathe_app.server"
waitForPort = 3001

[[workflows.workflow]]
name = "Lathe TUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m lathe_tui"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
